<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/referenceValue"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#55ffffff"
        android:visibility="visible"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入姓名或手机号码（可模糊查询）"
            android:inputType="textPersonName"
            android:textColor="@android:color/background_light"
            android:textColorHint="@color/transparent"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bn_sure_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="按姓名搜索"
            android:textColor="@android:color/background_light"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bn_sure1_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="按手机号码搜索"
            android:textColor="@android:color/background_light"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_whosbirthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="今天是谁的生日？"
            android:textColor="@android:color/holo_red_light"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bn_return"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="返  回"
            android:textColor="@android:color/background_light"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linersearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#22ffffff"
            android:orientation="vertical"
            android:visibility="gone">

            <ListView
                android:id="@+id/searchListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="今天是他们的生日，点击列表打个电话发个短信问候一下吧！"
                android:gravity="center"
                android:textColor="@android:color/holo_red_light"
                android:layout_gravity="center_horizontal" />

            <Button
                android:id="@+id/return_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="返  回"
                android:textColor="@android:color/background_light"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>