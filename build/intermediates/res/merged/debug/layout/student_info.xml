<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="?attr/referenceValue" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#55ffffff"
        android:orientation="vertical"
        android:padding="5dip" >

        <TextView
            android:id="@+id/id2_text_id"
            android:layout_width="80dip"
            android:layout_height="40dip"
            android:layout_marginBottom="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="5dip"
            android:gravity="left|center_vertical"
            android:text="序号："
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_info_id"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/id2_text_id"
            android:layout_toRightOf="@id/id2_text_id"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:gravity="left|center_vertical" />

        <TextView
            android:id="@+id/name2_text_id"
            android:layout_width="80dip"
            android:layout_height="40dip"
            android:layout_alignLeft="@id/id2_text_id"
            android:layout_below="@id/id2_text_id"
            android:layout_marginBottom="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="5dip"
            android:gravity="left|center_vertical"
            android:text="姓名："
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_info_name"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/name2_text_id"
            android:layout_toRightOf="@id/name2_text_id"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:gravity="left|center_vertical" />

        <TextView
            android:id="@+id/apartment2_text_id"
            android:layout_width="80dip"
            android:layout_height="40dip"
            android:layout_below="@id/name2_text_id"
            android:layout_marginBottom="5dip"
            android:layout_marginRight="5dip"
            android:gravity="left|center_vertical"
            android:text="部门："
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_info_apartment"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/apartment2_text_id"
            android:layout_toRightOf="@id/apartment2_text_id"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:gravity="left|center_vertical" />

        <TextView
            android:id="@+id/sex2_text_id"
            android:layout_width="80dip"
            android:layout_height="40dip"
            android:layout_alignLeft="@id/apartment2_text_id"
            android:layout_below="@id/apartment2_text_id"
            android:layout_marginBottom="5dip"
            android:layout_marginRight="5dip"
            android:gravity="left|center_vertical"
            android:text="性别："
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_info_sex"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/sex2_text_id"
            android:layout_toRightOf="@id/sex2_text_id"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:gravity="left|center_vertical" />

        <TextView
            android:id="@+id/classes2_text_id"
            android:layout_width="80dip"
            android:layout_height="40dip"
            android:layout_alignLeft="@id/sex2_text_id"
            android:layout_below="@id/sex2_text_id"
            android:layout_marginBottom="5dip"
            android:layout_marginRight="5dip"
            android:gravity="left|center_vertical"
            android:text="班级："
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_info_classes"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_below="@id/sex2_text_id"
            android:layout_marginRight="52dip"
            android:layout_toRightOf="@id/classes2_text_id"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:gravity="left|center_vertical" />

        <TextView
            android:id="@+id/contact2_text_id"
            android:layout_width="80dip"
            android:layout_height="40dip"
            android:layout_below="@id/classes2_text_id"
            android:layout_marginBottom="5dip"
            android:layout_marginRight="5dip"
            android:gravity="center_vertical|left"
            android:text="联系电话："
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_info_phone"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/contact2_text_id"
            android:layout_toRightOf="@id/contact2_text_id"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:gravity="center_vertical|left" />

        <TextView
            android:id="@+id/birthday_time_text_id"
            android:layout_width="80dip"
            android:layout_height="40dip"
            android:layout_below="@id/contact2_text_id"
            android:layout_marginBottom="5dip"
            android:layout_marginRight="5dip"
            android:gravity="center_vertical|left"
            android:text="生日："
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_info_birthday"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/birthday_time_text_id"
            android:layout_toRightOf="@id/birthday_time_text_id"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:gravity="center_vertical|left" />

        <Button
            android:id="@+id/btn_update"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="goBack"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:text="修改成员信息"
            android:layout_below="@+id/btn_msg"
            android:layout_centerHorizontal="true">
        </Button>
        <Button
            android:id="@+id/back_to_list_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="goBack"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:text="返回列表界面"
            android:layout_below="@+id/btn_update"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
        </Button>

        <ImageView
            android:id="@+id/btn_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_msg"
            android:layout_below="@+id/tv_info_birthday"
            android:layout_toRightOf="@+id/textView4"
            android:layout_toEndOf="@+id/textView4" />
        <ImageView
            android:id="@+id/btn_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_call"
            android:layout_below="@+id/tv_info_birthday"
            android:layout_toLeftOf="@+id/textView4"
            android:layout_toStartOf="@+id/textView4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textView4"
            android:text="   "
            android:layout_below="@+id/tv_info_birthday"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</RelativeLayout>